<% unless sidebar.pages.blank? %>
<div class="box">
  <div class="one-col box-top">
    <h3 class="box-title"><%= _("Pages") %></h3>
  </div>
  <div class="one-col box-body">
    <ul class="ul-listing">
      <% for page in sidebar.pages -%>
          <li>
			<%= link_to page.title, page.permalink_url %>
          </li>
      <% end %>
    </ul>
  </div>
  <div class="one-col box-bottom"></div>
</div>
<% end %>
